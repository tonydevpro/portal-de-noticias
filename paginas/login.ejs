<!-- Este é um modelo de página de login simples usando sintaxe EJS -->
<!DOCTYPE html>
<html lang="PT-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link rel="stylesheet" href="/publica/stylesLogin.css">
</head>
<body>
    <% if (error) { %>
        <p style="color: red;"><%= error %></p>
      <% } %>

  <h2>Login</h2>
  <form action="/login" method="POST">
    <input type="text" name="username" placeholder="E-mail" required /><br />
    <input type="password" name="password" placeholder="Senha" required /><br />
    <button type="submit">Entrar</button>
  </form>
  <p>Não tem uma conta? <a href="/registre">Cadastre-se</a></p>
  <%- include('partes/footer.ejs') %>
</body>
</html>
